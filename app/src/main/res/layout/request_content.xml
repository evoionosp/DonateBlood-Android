<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:context=".activities.RequestDetailsActivity"
		tools:showIn="@layout/activity_request_details">
	
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="@dimen/activity_horizontal_margin"
			android:weightSum="1">
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="BloodGroup Required:"
					android:id="@+id/tvhBG"
					android:padding="10dp"
					android:layout_marginBottom="10dp"
					android:layout_marginRight="5dp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Medium Text"
					android:id="@+id/tvBG"
					android:textColor="#000000"
					android:layout_marginBottom="10dp"/>
		</TableRow>
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Units Required:"
					android:id="@+id/tvhUnits"
					android:padding="10dp"
					android:layout_marginBottom="10dp"
			/>
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Medium Text"
					android:id="@+id/tvUnits"
					android:textColor="#000000"
					android:layout_marginBottom="10dp"
					android:layout_marginLeft="5dp" />
		</TableRow>
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Hospital Name:"
					android:id="@+id/tvhName"
					android:padding="10dp"
					android:layout_marginBottom="10dp"
					android:layout_marginRight="5dp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Medium Text"
					android:id="@+id/tvName"
					android:textColor="#000000"
					android:layout_marginBottom="10dp" />
		</TableRow>
		
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Address :"
				android:id="@+id/tvhAddr"
				android:padding="10dp" />
		
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:id="@+id/tvAddr"
				android:text="Address"
				android:textColor="#000000"
				android:layout_marginBottom="10dp"
				android:layout_marginLeft="70dp" />
		
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:id="@+id/tvhPerson"
					android:padding="10dp"
					android:text="Contact Person:"
					android:layout_marginBottom="10dp"
					android:layout_marginRight="10dp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Medium Text"
					android:id="@+id/tvPerson"
					android:textColor="#000000"
					android:layout_marginBottom="10dp" />
		</TableRow>
		
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Email ID :"
					android:id="@+id/tvhEmail"
					android:padding="10dp"
					android:layout_marginRight="5dp"
					android:layout_marginBottom="10dp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Medium Text"
					android:id="@+id/tvEmail"
					android:textColor="#000000"
					android:layout_marginBottom="10dp"
					android:layout_marginLeft="25dp" />
		</TableRow>
		
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Mobile :"
					android:id="@+id/tvhMobile"
					android:padding="10dp"
					android:layout_marginRight="5dp"
					android:layout_marginBottom="10dp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Medium Text"
					android:id="@+id/tvMobile"
					android:textColor="#000000"
					android:layout_marginBottom="10dp"
					android:layout_marginLeft="25dp" />
		</TableRow>
		
		<androidx.appcompat.widget.AppCompatButton
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/space_small"
				android:layout_margin="@dimen/space_small"
				android:id="@+id/btnAccept"
				android:textColor="@color/white"
				android:text = "Accept Request"
		android:background="@color/colorAccent"/>
		
		<androidx.appcompat.widget.AppCompatButton
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/space_small"
				android:layout_margin="@dimen/space_small"
				android:id="@+id/btnDone"
				android:visibility="gone"
				android:textColor="@color/white"
				android:text = "Blood donation completed"
				android:background="@color/colorPrimary"/>
		
		<androidx.appcompat.widget.AppCompatButton
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/space_small"
				android:layout_margin="@dimen/space_small"
				android:id="@+id/btnFailed"
				android:visibility="gone"
				android:textColor="@color/white"
				android:text = "I couldn't donate"
				android:background="@color/colorPrimaryDark"/>
	
	</LinearLayout>

</androidx.core.widget.NestedScrollView>
