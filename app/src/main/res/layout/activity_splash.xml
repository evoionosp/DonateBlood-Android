<?xml version="1.0" encoding="utf-8"?>
	
	<RelativeLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#23A4A6"
			android:id="@+id/frame_splash"
			tools:context=".activities.SplashActivity">
		
		<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/ivSplash"
				android:layout_width="200dp"
				android:layout_height="200dp"
				android:layout_centerInParent="true"
				android:src="@drawable/splash_logo"
				android:gravity="center"/>
	
	<androidx.appcompat.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/donate_blood_save_life"
			android:id="@+id/tvSplash"
			android:layout_marginBottom="@dimen/activity_vertical_margin"
			android:layout_alignParentBottom="true"
			android:textAlignment="center" android:layout_marginEnd="0dp" app:fontFamily="cursive"
			android:textSize="24sp" android:textStyle="bold" android:typeface="sans" app:textAllCaps="false"/>
		
	</RelativeLayout>
	
	
